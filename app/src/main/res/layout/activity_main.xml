<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="400dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036">

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <ImageButton
        android:id="@+id/gpsButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginBottom="252dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/gpsbutton"
        android:onClick="GPSbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gps_btn" />

    <ImageButton
        android:id="@+id/climbButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginBottom="252dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Climbbtn"
        android:onClick="Climbbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hiking_btn" />


    <ImageButton
        android:id="@+id/picnicButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginBottom="68dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Picnicbtn"
        android:onClick="Picnicbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/picnic_btn" />

    <ImageButton
        android:id="@+id/restaurantButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginBottom="56dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Restaurantbtn"
        android:onClick="Restaurantbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rst_btn" />

    <TextView
        android:id="@+id/GPSbtn"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:fontFamily="@font/namsan"
        android:gravity="center"
        android:text="@string/GPSbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gpsButton" />

    <TextView
        android:id="@+id/Climbbtn"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/namsan"
        android:gravity="center"
        android:text="@string/Climbbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/climbButton" />

    <TextView
        android:id="@+id/Picnicbbtn"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginStart="72dp"
        android:fontFamily="@font/namsan"
        android:gravity="center"
        android:text="@string/Picnicbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picnicButton" />

    <TextView
        android:id="@+id/Restaurantbtn"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/namsan"
        android:gravity="center"
        android:text="@string/Restaurantbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantButton" />


</androidx.constraintlayout.widget.ConstraintLayout>