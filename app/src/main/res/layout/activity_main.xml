<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="412dp"
        android:layout_height="256dp"
        android:layout_marginTop="70dp"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <ImageButton
        android:id="@+id/climbButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Climbbtn"
        android:onClick="Climbbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/Climbbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/hiking_btn" />

    <TextView
        android:id="@+id/Climbbtn"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/goyang"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:text="@string/Climbbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restaurantButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/gpsButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginStart="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/gpsbutton"
        android:onClick="GPSbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/GPSbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/gps_btn" />

    <ImageButton
        android:id="@+id/restaurantButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Restaurantbtn"
        android:onClick="Restaurantbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/Restaurantbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/rst_btn" />

    <TextView
        android:id="@+id/Picnicbbtn"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/goyang"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:text="@string/Picnicbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/GPSbtn"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/goyang"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:text="@string/GPSbtn"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/picnicButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Restaurantbtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/goyang"
        android:gravity="center"
        android:text="@string/near_restaurant"
        android:textColor="#4CAF50"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/picnicButton"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginStart="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/Picnicbtn"
        android:onClick="Picnicbutton"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/Picnicbbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/picnic_btn" />





</androidx.constraintlayout.widget.ConstraintLayout>