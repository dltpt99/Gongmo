<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Climbactivity">


    <ImageButton
        android:id="@+id/clmib_easy_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/clmib_menu_easy_button"
        android:onClick="climb_easy"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/clmib_normal_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/climb_easy" />

    <ImageButton
        android:id="@+id/clmib_normal_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/clmib_menu_normal_button"
        android:onClick="climb_normal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/clmib_hard_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/climb_normal" />

    <ImageButton
        android:id="@+id/clmib_hard_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/climb_menu_hard_button"
        android:onClick="climb_hard"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/climb_hard" />

</androidx.constraintlayout.widget.ConstraintLayout>