<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Climbactivity">


    <ImageButton
        android:id="@+id/clmib_easy_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/clmib_menu_easy_button"
        android:onClick="climb_easy"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/clmib_normal_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/climb_easy" />

    <ImageButton
        android:id="@+id/clmib_normal_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/clmib_menu_normal_button"
        android:onClick="climb_normal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/clmib_hard_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/climb_normal" />

    <ImageButton
        android:id="@+id/clmib_hard_btn"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/climb_menu_hard_button"
        android:onClick="climb_hard"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/climb_hard" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/goyang"

            android:text="산산한 날에"
            android:textColor="#4CAF50"
            android:textSize="14pt"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="244dp" />
    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>